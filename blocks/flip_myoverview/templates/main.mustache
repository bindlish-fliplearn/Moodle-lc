{{!
    @template block_flip_myoverview/main

    This template renders the main content area for the flip_myoverview block.

    Example context (json):
    {}
}}

<div id="block-flip_myoverview-{{uniqid}}" class="block-flip_myoverview" data-region="flip_myoverview">
    <ul id="block-flip_myoverview-view-choices-{{uniqid}}" class="nav nav-tabs" role="tablist">
        <li class="nav-item {{#viewingtimeline}}active{{/viewingtimeline}}">
            <a class="nav-link" href="#flip_myoverview_timeline_view" role="tab" data-toggle="tab" data-tabname="scheduled">
            Scheduled
            </a>
        </li>
        <li class="nav-item {{#viewingcourses}}active{{/viewingcourses}}">
            <a class="nav-link" href="#flip_myoverview_completed_timeline_view" role="tab" data-toggle="tab" data-tabname="courses">
            Completed
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade {{#viewingtimeline}}in active{{/viewingtimeline}}" id="flip_myoverview_timeline_view">
            {{> block_flip_myoverview/timeline-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewingcourses}}in active{{/viewingcourses}}" id="flip_myoverview_completed_timeline_view">
                {{> block_flip_myoverview/completed-view}}
        </div>
    </div>
</div>
{{#js}}
require(['jquery', 'block_flip_myoverview/tab_preferences'], function($, TabPreferences) {
    var root = $('#block-flip_myoverview-view-choices-{{uniqid}}');

    TabPreferences.registerEventListeners(root);
});
{{/js}}
